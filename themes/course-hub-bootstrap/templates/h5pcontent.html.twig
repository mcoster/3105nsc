{% if page.header.published %}
{% block content %}
<div class="h5p-content-wrapper">
{% set h5pcontentid = page.header.hp5_content_id %}
  {% if h5pcontentid|contains('https') %}
    {% set h5pcontenturl = h5pcontentid %}
  {% else %}
    {% set h5pcontenturl = 'https://h5p.org/h5p/embed/' ~ h5pcontentid %}
  {% endif %}
    <iframe src="{{h5pcontenturl}}" width="400" height="300" frameborder="0" allowfullscreen="allowfullscreen"></iframe><script src="https://h5p.org/sites/all/modules/h5p/library/js/h5p-resizer.js" charset="UTF-8"></script>
</div>
{% endblock %}
{% endif %}
